<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_margin="5dp"
    android:background="@drawable/custom_item_theloai">

    <ImageView
        android:id="@+id/img_theloai"
        android:src="@drawable/monxao"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_ten_theloai"
        android:paddingStart="10dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="Món xào"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/imgbtn_edit_monan"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_edit"
        android:background="@drawable/custom_item_theloai"
        android:padding="0dp"/>
    <ImageButton
        android:id="@+id/imgbnt_delete_monan"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete"
        android:padding="0dp"
        android:background="@drawable/custom_item_theloai"/>
</LinearLayout>