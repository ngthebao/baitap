<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_theloai_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/monxao" />

        <TextView
            android:id="@+id/txt_theloai_home"
            android:layout_below="@+id/img_theloai_home"
            android:text="tên món"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignStart="@+id/img_theloai_home"
            android:layout_alignEnd="@+id/img_theloai_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>